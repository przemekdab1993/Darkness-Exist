<div class="blog-list-element">
    <a href="{{ path('docShow', { "docId": doc.id }) }}">
        <div class="blog-title">
            <h2>{{ doc.title }}</h2>
            {% if doc.lead %}
                <span>{{ doc.lead }}</span>
            {% endif %}
        </div>
        <span class="read-more">Czytaj wiÄ™cej &raquo;</span>
    </a>
    <div class="blog-bar">
        <div class="blog-bar">
            {% if date(doc.createdDate) >  ( date("-1 month")) %}
                <span>Data dodania: </span>{{ doc.createdDate | ago }}
            {% else %}
                <span>Data dodania: </span>{{ doc.createdDate | date("d-m-Y") }}
            {% endif %}
        </div>
    </div>
</div>